<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tomorrow_weather_main_layout"
    android:orientation="vertical"
    android:weightSum="9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <RelativeLayout
       android:layout_weight="8"
       android:background="@color/colorBlackBlue"
       android:id="@+id/tomorrow_weather_description"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <TextView
           android:id="@+id/tomorrow_weather_cityText"
           android:textSize="20sp"
           android:textColor="@color/colorLightGrey"
           android:layout_marginTop="5dp"
           android:layout_marginLeft="15dp"
           android:layout_marginStart="15dp"
           android:textStyle="bold"
           android:layout_alignParentStart="true"
           android:layout_alignParentLeft="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

       <TextView
           android:id="@+id/tomorrow_weather_dateText"
           android:textColor="@color/colorLightGrey"
           android:textSize="20sp"
           android:layout_marginBottom="5dp"
           android:layout_alignLeft="@+id/tomorrow_weather_cityText"
           android:layout_alignStart="@+id/tomorrow_weather_cityText"
           android:layout_below="@+id/tomorrow_weather_cityText"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   </RelativeLayout>

    <ListView
        android:layout_weight="1"
        android:background="@color/colorDarkBlue"
        android:id="@+id/listViewTomorrowWeather"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
