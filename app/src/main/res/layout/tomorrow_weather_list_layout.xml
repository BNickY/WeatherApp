<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tomorrow_weather_list_layout"
    android:background="@color/colorDarkBlue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tomorrow_dateTime"
        android:textSize="25sp"
        android:textColor="@color/colorLightBlue"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tomorrow_condition"
        android:textSize="20sp"
        android:textColor="@color/colorLightBlue"
        android:layout_below="@+id/tomorrow_dateTime"
        android:layout_alignLeft="@+id/tomorrow_dateTime"
        android:layout_alignStart="@+id/tomorrow_dateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/weatherIconTomorrow"
        android:background="@color/colorDarkBlue"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_alignTop="@+id/tomorrow_dateTime"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/tomorrow_temperature"
        android:textSize="30sp"
        android:textColor="@color/colorLightBlue"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@+id/tomorrow_dateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
